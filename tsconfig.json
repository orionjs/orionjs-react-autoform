{
  "compilerOptions": {
    "strict": false,
    "emitDeclarationOnly": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "removeComments": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2020", "dom"],
    "jsx": "react",
    "outDir": "dist"
  }
}
