{
  "name": "orionjs-react-autoform",
  "version": "2.2.2",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "type": "module",
  "main": "./dist/orionjs-react-autoform.umd.js",
  "module": "./dist/orionjs-react-autoform.es.js",
  "exports": {
    ".": {
      "import": "./dist/orionjs-react-autoform.es.js",
      "require": "./dist/orionjs-react-autoform.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": "https://github.com/orionjs/orionjs-react-autoform",
  "author": "nicolaslopezj",
  "license": "MIT",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "prepare": "yarn run build",
    "clean": "rm -rf ./dist",
    "dev": "watch -p './src/**/*.ts' -c 'yarn build'",
    "build": "vite build && yarn emit-types",
    "emit-types": "tsc"
  },
  "devDependencies": {
    "@apollo/client": "^3.10.8",
    "@biomejs/biome": "^1.8.3",
    "@orion-js/schema": "^4.0.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/graphql": "^14.5.0",
    "@types/lodash": "^4.17.7",
    "@types/react": "^18.3.3",
    "graphql": "^16.9.0",
    "jsdom": "^26.1.0",
    "react": "^18.3.1",
    "react-dom": "^19.1.1",
    "simple-react-form": "^4.3.2",
    "typescript": "^5.9.2",
    "vite": "^5.3.4",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.2.4",
    "watch-cli": "^0.2.3"
  },
  "peerDependencies": {
    "@apollo/client": "*",
    "@orion-js/schema": "*",
    "graphql": "*",
    "graphql-tag": "*",
    "react": "*",
    "simple-react-form": "*"
  },
  "dependencies": {
    "lodash": "4.17.21"
  }
}
